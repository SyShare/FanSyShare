<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/activity_background</item>

        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <!--沉浸式状态栏主题-->
    <style name="AppTheme.TransStatus">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LiveActivity" parent="AppTheme.Transparent">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:windowBackground" tools:targetApi="LOLLIPOP">
            @android:color/transparent
        </item>
        <item name="android:windowIsTranslucent" tools:targetApi="LOLLIPOP">true</item>
    </style>

    <style name="LiveActivityNoTrans" parent="AppTheme.Transparent">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="ChangeFloorActivity" parent="AppTheme.Transparent">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBigImageThem" parent="AppTheme.FullScreen">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ActivityTheme.NoAnima" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.FullScreen.Splash">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <!--<item name="android:windowBackground">@drawable/pic_splash</item>-->
    </style>

    <style name="LightGrayThinLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
        <item name="android:background">@color/divider_line</item>
    </style>

    <style name="BettingThinLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_line_betting_color</item>
    </style>

    <style name="LightGrayThinLineExchangeList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:background">@color/list_background_color</item>
    </style>

    <!-- 操作项样式 start -->
    <style name="option_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/activity_background</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/space_13</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="option_item_img">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">@dimen/space_10</item>
    </style>

</resources>
